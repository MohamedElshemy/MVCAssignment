
@{
    ViewBag.Title = "Patients";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>
<link href="~/Scripts/DataTable/dataTables.bootstrap4.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTable/jquery.dataTables.min.js"></script>
<script src="~/Scripts/DataTable/dataTables.bootstrap4.min.js"></script>

<h2>Index</h2>
<div class="card card-secondary custome-card">
    <div class="card-header">
        <h4 class="m-b-0">Patients</h4>
        <button type="button" class="btn btn-info" id="Btn_Add" data-action="Add" data-controller="Patient" data-Area="">
            Add
        </button>
    </div>
    <div class="card-body">

        @Html.Action("PatientListGrid")

    </div>
</div>

@section scripts{

    <script>
        $(document).ready(function () {
            $("#Btn_Add").on("click", function () {
                document.location = '@Url.Action("Add", "Patient")';
            });
        });

    </script>
}
